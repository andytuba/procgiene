<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }} - {{ metadata.title }} - {{ metadata.author.name }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <header>
      <h1 class="home flex-two-column flex-centered">

        <a href="{{ '/' | url }}">
          <img 
            src="{{ '/img/andytuba-by-AStrongPhoto-2021007.jpg' | url}}" alt="headshot of {{ metadata.author.name }}"
            class="avatar"
          >
        </a>
        <div>
          <a class="metadata-shorttitle" href="{{ '/' | url }}">{{ metadata.short_title }}</a><br>
          <small class="metadata-description">{{ metadata.description }}</small>
          &nbsp;
          &nbsp;
          <small class="metadata-author"><a href="{{ '/about/' | url }}">â€“ {{ metadata.author.name }}</a></small>
        </div>
      </h1>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>