---
layout: layouts/base.njk
templateClass: tmpl-post
---

<nav>
  {% set postslist = collections.slide %}
  {% set url = page.url %}
  {% include "postslist.njk" %}
</nav>

<h1 class="post-title"><a href="{{ url | url }}">{{ title }}</a></h1>

{{ content | safe }}

{%- set nextPost = collections.slide | getNextCollectionItem(page) %}
{%- set previousPost = collections.slide | getPreviousCollectionItem(page) %}
{%- if nextPost or previousPost %}
<footer>
  {%- if previousPost %}<a href="{{ previousPost.url | url }}" title="previous slide: {{ previousPost.data.title }}">&#x2b05;</a></li>{% endif %}
  {%- if previousPost and nextPost %} &middot; {% endif %}
  {%- if nextPost %}<a href="{{ nextPost.url | url }}" title="next slide: {{ nextPost.data.title }}">&#x27a1;</a></li>{% endif %}
</footer>
{%- endif %}
